<body>
    <%- include('partials/navbar.ejs') %>
    <%if(message){%>
        <!-- <div class="d-flex justify-content-center">
            <div style="width:99%; text-align:center" class="alert alert-primary" role="alert">
                <%-message%>
            </div>
        </div> -->
    <%}%>

    <!--Starting of main body-->
    <main>
        <h1 style="margin-top: -140px;">Contacts</h1>

        <div>
            <form action="/Contacts" method="POST" style="margin-top: -20px;" id="contact-detail">
                <div class="col-9 justify-content-center" style="margin-left: 180px;">
                    <label class="col-1" for="title" >Title:</label>
                    <input class="col-7" type="text" id="title" name="title" style="width:500px; margin-left: 10px;">
                </div>
                <br>
                <div class="col-9 row  justify-content-center" style="margin-left: 75px;">
                    <label class="col-2" for="feedback">Feedback:</label>
                    <textarea class="col-7" name="feedback" form="contact-detail" style="height: 100px;"></textarea>
                </div>
                <button onclick="" style="margin-left: 320px; margin-top: 35px;">Submit</button>
            </form>
        </div>
    </main>
</body>
